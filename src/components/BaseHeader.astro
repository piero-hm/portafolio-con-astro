---
// Este componente define la barra de navegación principal del sitio.
// Es responsivo y tiene un menú para dispositivos móviles.

// Puedes pasar el enlace activo como una prop para resaltarlo.
const { activePage } = Astro.props;
---

<header
  class="fixed top-0 z-50 w-full bg-slate-900/60 backdrop-blur-xl shadow-lg border-b border-slate-800"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo o Nombre del Sitio -->
      <div class="flex-shrink-0">
        <a
          href="/"
          class="text-2xl font-extrabold bg-gradient-to-r from-blue-400 to-purple-600 text-transparent bg-clip-text"
        >
          Piero
        </a>
      </div>

      <!-- Enlaces de Navegación para Escritorio -->
      <nav class="hidden md:flex md:space-x-8">
        <a
          href="/"
          class={`font-medium text-slate-300 hover:text-white transition-colors duration-200 nav-link-underline ${activePage === '/' ? 'active' : ''}`}
        >
          Inicio
        </a>

        <a
          href="/sobre-mi"
          class={`font-medium text-slate-300 hover:text-white transition-colors duration-200 nav-link-underline ${activePage === '/sobre-mi' ? 'active' : ''}`}
        >
          Sobre mi
        </a>
        <a
          href="/habilidades"
          class={`font-medium text-slate-300 hover:text-white transition-colors duration-200 nav-link-underline ${activePage === '/habilidades' ? 'active' : ''}`}
        >
          Habilidades
        </a>

        <a
          href="/proyectos"
          class={`font-medium text-slate-300 hover:text-white transition-colors duration-200 nav-link-underline ${activePage === '/proyectos' ? 'active' : ''}`}
        >
          Proyectos
        </a>
        <a
          href="/contacto"
          class={`font-medium text-slate-300 hover:text-white transition-colors duration-200 nav-link-underline ${activePage === '/contacto' ? 'active' : ''}`}
        >
          Contacto
        </a>
      </nav>

      <!-- Botón de Menú para Móviles -->
      <div class="-mr-2 flex md:hidden">
        <button
          id="mobile-menu-button"
          type="button"
          class="inline-flex items-center justify-center p-2 rounded-md text-slate-300 hover:text-white hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Abrir menú principal</span>
          <!-- Ícono de hamburguesa -->
          <svg
            class="block h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <!-- Ícono de X (cerrar) -->
          <svg
            class="hidden h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Menú para Móviles (se muestra/oculta con JS) -->
  <div class="hidden md:hidden bg-slate-900/90" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a
        href="/"
        class="block px-3 py-2 rounded-md text-base font-medium text-slate-300 hover:text-white hover:bg-slate-800 nav-link-underline ${activePage === '/' ? 'active' : ''}"
        >Inicio</a
      >
      <a
        href="/sobre-mi"
        class="block px-3 py-2 rounded-md text-base font-medium text-slate-300 hover:text-white hover:bg-slate-800 nav-link-underline ${activePage === '/sobre-mi' ? 'active' : ''}"
        >Sobre mi</a
      >
      <a
        href="/habilidades"
        class="block px-3 py-2 rounded-md text-base font-medium text-slate-300 hover:text-white hover:bg-slate-800 nav-link-underline ${activePage === '/habilidades' ? 'active' : ''}"
        >Habilidades</a
      >
      <a
        href="/proyectos"
        class="block px-3 py-2 rounded-md text-base font-medium text-slate-300 hover:text-white hover:bg-slate-800 nav-link-underline ${activePage === '/proyectos' ? 'active' : ''}"
        >Proyectos</a
      >
      <a
        href="/contacto"
        class="block px-3 py-2 rounded-md text-base font-medium text-slate-300 hover:text-white hover:bg-slate-800 nav-link-underline ${activePage === '/contacto' ? 'active' : ''}"
        >Contacto</a
      >
    </div>
  </div>
</header>

<script is:inline>
  // --- Script para el menú móvil ---
  const btn = document.getElementById("mobile-menu-button");
  const menu = document.getElementById("mobile-menu");
  const icons = btn.querySelectorAll("svg");

  btn.addEventListener("click", () => {
    menu.classList.toggle("hidden");
    icons.forEach((icon) => icon.classList.toggle("hidden"));
  });
</script>
