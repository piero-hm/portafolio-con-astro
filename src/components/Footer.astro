---
const socials = [
  { href: "#", label: "GitHub", svg: "github" },
  { href: "#", label: "LinkedIn", svg: "linkedin" },
  { href: "#", label: "X", svg: "x" },
  { href: "#", label: "Instagram", svg: "instagram" },
];
const year = new Date().getFullYear();
---

<footer
  class="mt-12 border-t border-slate-200 dark:border-slate-700 bg-transparent"
>
  <div class="container mx-auto px-4 py-6 text-center">
    <div class="mb-4 flex justify-center gap-4">
      {
        socials.map((s) => (
          <a
            href={s.href}
            aria-label={s.label}
            class="inline-flex items-center justify-center w-10 h-10 rounded-full text-slate-700 hover:bg-slate-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 dark:text-slate-200 dark:hover:bg-slate-800"
            target="_blank"
            rel="noopener noreferrer"
          >
            {s.svg === "github" && (
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5"
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
              >
                <path d="M12 .5C5.65.5.5 5.65.5 12c0 5.08 3.29 9.39 7.86 10.91.58.11.79-.25.79-.56 0-.28-.01-1.02-.02-2-3.2.7-3.88-1.54-3.88-1.54-.53-1.36-1.3-1.72-1.3-1.72-1.06-.73.08-.72.08-.72 1.17.08 1.79 1.2 1.79 1.2 1.04 1.78 2.73 1.27 3.4.97.11-.75.41-1.27.75-1.56-2.56-.29-5.26-1.28-5.26-5.7 0-1.26.45-2.29 1.19-3.1-.12-.29-.52-1.46.11-3.04 0 0 .98-.31 3.2 1.18a11.04 11.04 0 0 1 2.92-.39c.99.01 1.99.13 2.92.39 2.22-1.49 3.2-1.18 3.2-1.18.63 1.58.23 2.75.11 3.04.74.81 1.19 1.84 1.19 3.1 0 4.43-2.71 5.41-5.29 5.7.42.36.79 1.08.79 2.18 0 1.58-.01 2.86-.01 3.25 0 .31.21.68.8.56A10.52 10.52 0 0 0 23.5 12C23.5 5.65 18.35.5 12 .5z" />
              </svg>
            )}
            {s.svg === "linkedin" && (
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5"
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
              >
                <path d="M4.98 3.5C3.34 3.5 2 4.83 2 6.48s1.34 2.98 2.98 2.98h.03C6.66 9.46 8 8.14 8 6.48S6.66 3.5 4.98 3.5zM2.5 21.5h5V10H2.5v11.5zM9.5 21.5h5V15c0-1.55.03-3.55 2.5-3.55 2.45 0 2.5 2.14 2.5 3.66v6.39h5V14.2c0-6.2-3.3-9.1-8-9.1-3.7 0-5.4 2.06-6.3 3.5h.05V21.5z" />
              </svg>
            )}
            {s.svg === "x" && (
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5"
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
              >
                <path d="M23.954 4.569a.75.75 0 0 0-.94-.314L12 9.587 1.986 4.255a.75.75 0 0 0-.972 1.105L10.99 12l-9.976 6.64a.75.75 0 1 0 .972 1.106L12 14.413l11.014 5.332a.75.75 0 0 0 .94-.314.75.75 0 0 0-.11-.83L13.01 12l10.834-6.61a.75.75 0 0 0 .11-.82z" />
              </svg>
            )}
            {s.svg === "instagram" && (
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5"
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
              >
                <path d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5zm0 2a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V7a3 3 0 0 0-3-3H7zm5 3.5a4.5 4.5 0 1 1 0 9 4.5 4.5 0 0 1 0-9zm0 2a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zm4.75-3.75a1.125 1.125 0 1 1 0 2.25 1.125 1.125 0 0 1 0-2.25z" />
              </svg>
            )}
          </a>
        ))
      }
    </div>

    <p class="text-sm text-slate-500 dark:text-slate-400">
      &copy; {year} Piero. Todos los derechos reservados.
    </p>
  </div>

  <!-- botón scroll top: inicialmente oculto (hidden). El script del layout lo mostrará -->
  <button
    id="scrollTopBtn"
    type="button"
    aria-label="Subir al inicio"
    class="hidden fixed bottom-6 right-6 w-11 h-11 rounded-full shadow-lg bg-white/90 dark:bg-slate-800/90 text-slate-700 dark:text-slate-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 transition-opacity duration-200"
  >
    <svg
      class="w-5 h-5"
      viewBox="0 0 24 24"
      fill="currentColor"
      aria-hidden="true"
    >
      <path d="M12 5.5l6 6-1.4 1.4L13 9.3v9.2h-2V9.3L7.4 12.9 6 11.5l6-6z"
      ></path>
    </svg>
  </button>
</footer>
