---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/contacto.css";
---

<BaseLayout
  activePage={Astro.url.pathname}
  title="Contacto - Piero"
  description="Ponte en contacto con Piero para colaboraciones o consultas."
>
  <main class="max-w-3xl mx-auto my-12 pt-12 px-4">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-white">Ponte en Contacto</h1>
    </div>

    <form
      action="https://formspree.io/f/YOUR_UNIQUE_ID"
      method="POST"
      class="space-y-6 p-8 rounded-xl bg-slate-800 shadow-lg"
    >
      <!-- Nombre -->
      <div>
        <label for="name" class="block text-sm font-medium text-gray-300"
          >Nombre</label
        >
        <input
          type="text"
          id="name"
          name="name"
          required
          class="h-7 mt-1 block w-full rounded-lg border-slate-700 bg-slate-900 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
        />
      </div>

      <!-- Email -->
      <div>
        <label for="email" class="block text-sm font-medium text-gray-300"
          >Correo Electrónico</label
        >
        <input
          type="email"
          id="email"
          name="email"
          required
          class="h-7 mt-1 block w-full rounded-lg border-slate-700 bg-slate-900 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
        />
      </div>

      <!-- Mensaje -->
      <div>
        <label for="message" class="block text-sm font-medium text-gray-300"
          >Mensaje</label
        >
        <textarea
          id="message"
          name="message"
          rows="5"
          required
          class="mt-1 block w-full rounded-lg border-slate-700 bg-slate-900 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
        ></textarea>
      </div>

      <!-- Botón -->
      <div class="text-center">
        <button
          type="submit"
          class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow hover:bg-blue-700 transition transform hover:scale-105"
        >
          Enviar Mensaje
        </button>
      </div>
    </form>
  </main>
</BaseLayout>
